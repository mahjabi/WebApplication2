@model List<WebApplication2.Models.Entities.Student>

<div class="container my-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Students" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Student
            </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <form asp-controller="Students" asp-action="Search" method="get" class="input-group mb-3">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name or email" value="@ViewData["searchString"]">
                <button class="btn btn-primary" type="submit">Search</button>
                <a asp-controller="Students" asp-action="List" class="btn btn-secondary ms-2">Show All</a>
            </form>
        </div>
    </div>

    @if (TempData["warning"] != null)
    {
        <div class="alert alert-warning">@TempData["warning"]</div>
    }

    <div class="row mt-4">
        <div class="col-12">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.OrderBy(s => s.Id))
                        {
                            <tr class="text-center">
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>
                                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info mt-4" role="alert">
                    No students found.
                </div>
            }
        </div>
    </div>
</div>
